<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".fragments.LandingPage">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background_color">

        <TextView
            android:id="@+id/landing_page_header_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/andika"
            android:gravity="center_horizontal"
            android:text="MilaBiLa Presents: Fun With "
            android:textSize="24sp"
            app:layout_constraintBottom_toTopOf="@id/landing_page_imageview"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/landing_page_imageview"
            android:layout_width="224dp"
            android:layout_height="224dp"
            android:src="@drawable/milabila_logo"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/landing_page_header_textview"
            app:layout_constraintBottom_toTopOf="@id/landing_page_buttons_linear"
            />

        <androidx.constraintlayout.widget.ConstraintLayout

            android:id="@+id/landing_page_buttons_linear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/text_color"
            android:orientation="vertical"
            android:padding="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

                <Button
                    android:id="@+id/landing_page_alphabet_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/circle"
                    android:text="Letters"
                    android:textAllCaps="false"
                    android:textColor="@color/text_color"
                    android:layout_marginBottom="8dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/landing_page_colors_button"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/landing_page_numbers_button"/>

                <Button
                    android:id="@+id/landing_page_numbers_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/circle"
                    android:text="Numbers"
                    android:textAllCaps="false"
                    android:layout_marginBottom="8dp"
                    android:textColor="@color/text_color"
                    app:layout_constraintStart_toEndOf="@id/landing_page_alphabet_button"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/landing_page_shapes_button"/>

                <Button
                    android:id="@+id/landing_page_colors_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/circle"
                    android:text="Colors"
                    android:textAllCaps="false"
                    android:textColor="@color/text_color"
                    android:layout_marginTop="8dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/landing_page_alphabet_button"
                    app:layout_constraintEnd_toStartOf="@id/landing_page_shapes_button"
                    app:layout_constraintBottom_toBottomOf="parent"/>
                <Button
                    android:id="@+id/landing_page_shapes_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/circle"
                    android:text="Shapes"
                    android:textAllCaps="false"
                    android:textColor="@color/text_color"
                    android:layout_marginTop="8dp"
                    app:layout_constraintStart_toEndOf="@id/landing_page_colors_button"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/landing_page_numbers_button"
                    app:layout_constraintBottom_toBottomOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>